{
  "manifest_version": 3,
  "name": "LinkedIn Comment Extractor",
  "version": "1.0",
  "description": "Extracts comments from LinkedIn posts and saves them to CSV",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
